	position: relative;

}
.home .selection{
	background-color:#f0f0f0;
	padding-top:1px;
}
.home .s1 .inner,.home .s3 .inner{
	margin-right:1px;
	margin-bottom:1px;
	background-color:white;
}
.home .s2 .inner,.home .s4 .inner{
	margin-bottom:1px;
	background-color:white;
}
