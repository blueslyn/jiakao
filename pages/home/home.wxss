}

.home .logo-subject{
	background-size:100%;
	height:19px;
	width:19px;
	display:block;
	position: absolute;
	top:20px;
	left:3%;
	z-index: 100;

}
.home .e1 .logo-subject{
	background-image:url(https://www.wxapp-gateway.com/image/e1.png);
}
.home .e2 .logo-subject{
	background-image:url(https://www.wxapp-gateway.com/image/e2.png);
}
