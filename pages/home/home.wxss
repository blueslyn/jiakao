.dle .dle-body{
	width:100%;
	padding-top: 35px
}
.home{
	width:100%;
}
.home .subject4 .selection,.home .subject1 .selection{
	display:flex;
	flex-wrap: wrap;
	width:100%;
}
.home .subject-title{
	text-align:left;
	position: relative;
	padding-left:10%;
	height:25px;
	font-size:18px;
	font-weight:bolder;
	padding-top:20px;
	background-color: #f6f6f6
}
.home .subject{
	/*margin-bottom: 50rpx;*/
	position: relative;
}
.home .e_selection{
	width:50%;
	text-align: center;
